{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "backend/src",
    "baseUrl": "./",
    "outDir": "backend/dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["backend/src/*"]
    },
    "typeRoots": ["backend/src/@types"]
  },
  "include": ["backend/src/**/*"],
  "exclude": ["node_modules"]
}
